<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Musicly</title>
    <link rel="stylesheet" href="styles/main.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <!-- Hero 1 - Bootstrap Brain Component -->
    <section
      class="bsb-hero-1 px-3 bsb-overlay bsb-hover-pull"
      style="background-image: url('assets/background.jpeg')"
    >
      <div class="container p-5">
        <div class="row justify-content-md-center">
          <div
            class="col-12 col-md-11 col-lg-9 col-xl-7 col-xxl-6 text-center text-white"
          >
            <h2 class="display-3 fw-bold mb-3">Your Music Guide</h2>
            <p class="lead mb-5">
              Search for your favorite song and learn all details about it!
            </p>
            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
              <!-- <button type="button" class="btn bsb-btn-xl btn-outline-light">Search Music</button> -->
              <form id="searchMusicForm" method="post">
                <div class="input-group mb-3">
                  <input
                    type="text"
                    class="form-control music-search-input"
                    placeholder="Song Name, Artist Name..."
                    aria-label="Song Name, Artist Name..."
                    aria-describedby="basic-addon2"
                    name="searchTerm"
                  />
                  <div class="input-group-append">
                    <button class="btn btn-outline-light" type="submit">
                      Search Music
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>

    <%for(var i = 0; i< (searchBoolean ? content.response.hits.length : 10); i++){%>
    <div class="music-card-outer">
      <div class="music-card-inner">
        <div class="music-card-inner-image">
          <img src="<%=
          content["response"]["hits"][i]["result"]["header_image_thumbnail_url"]%>">
        </div>
        <div class="music-card-inner-info">
          <div>
            <h2>
              <%= content["response"]["hits"][i]["result"]["title"]%>, 
              <%=content["response"]["hits"][i]["result"]["artist_names"]%>
            </h2>
          </div>
          <div>
            <p>
              <%=content.response.hits[i].result.release_date_components.year%> -
              <a href="<%=content.response.hits[i].result.url%>">Lyrics</a>
            </p>
          </div>
        </div>
      </div>
    </div>
    <%}%>
    <script src="https://genius.codes"></script>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
